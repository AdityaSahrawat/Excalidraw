generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String  @unique
  username  String
  provider  String
  password  String?
  avatar    String?
  rooms     Room[] 
  joinedRooms JoinedRooms[]
  chats     Element[]
}

model Room {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  createdAt  DateTime    @default(now())
  code      String      
  adminId   String
  admin     User        @relation(fields: [adminId] , references: [id])
  chats     Element[]
  joinedRooms JoinedRooms[]
}

model Element {
  id      Int       @id @default(autoincrement()) 
  shapeId String    @unique
  shape String
  roomId  Int       
  userId  String
  room    Room      @relation(fields: [roomId] , references: [id])
  chat    User      @relation(fields: [userId] , references: [id])
}

model JoinedRooms {
  id      Int @id @default(autoincrement())
  user    User      @relation(fields: [userid] , references: [id])
  userid  String 
  room    Room      @relation(fields: [roomId] , references: [id])
  roomId  Int    
  joinedAt DateTime @default(now())  

  @@unique([userid , roomId]) 
}

model VerificationEmail{
  id        Int       @id @default(autoincrement())
  email     String    @unique  
  code      String
  expireAt  DateTime
}